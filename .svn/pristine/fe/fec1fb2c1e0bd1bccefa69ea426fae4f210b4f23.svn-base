<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<style>
</style>
<body>
	<div class="wrapper">
		<div class="header">
			<%@ include file="/common/header.jsp"%>
		</div>
		<div class="navi">
		<%
			String position = "login";
		%>
			<%@ include file="/common/navi.jsp"%>
		</div>
		<div class="body">
			<div class="container">
				<div class="content-header text-center">
					<h1 class="display-4">LOGIN</h1>
					<p>
						<strong>배스킨 라빈스 홈페이지에 오신 것을 환영합니다.</strong>
					</p>
				</div>
				<div class="custom-content-box">
					<hr />
					<div class="title text-center">
					<%
						String error = request.getParameter("error");
					%>
						<h5>베스킨라빈스 로그인</h5>
						<p>해피포인트 아이디로 간편하게 로그인 하세요</p>
					<%
						if("fail".equals(error)) {
							out.println("<script>alert('아이디 혹은 비밀번호가 일치하지 않습니다.');</script>");
						} else if ("deny".equals(error)) {
							out.println("<script>alert('로그인 후 사용할 수 있는 서비스입니다.');</script>");
						}
					%>
					</div>
					<!-- login form start -->
					<div class="custom-box-wrap">
						<div class="custom-box">
							<form action="login.jsp" method="post">
								<div class="row">
									<div class="col-8">
										<div class="form-group">
											<input type="text" name="id" class="form-control"
												placeholder="아이디를 입력하세요" />
										</div>
										<div class="form-group">
											<input type="password" name="pwd" class="form-control"
												placeholder="비밀번호를 입력하세요" />
										</div>
									</div>
									<div class="col-4">
										<button class="login-btn" type="submit">로그인</button>
									</div>
								</div>
							</form>
						</div>
					</div>
					<!-- login form end -->
				</div>
			</div>
		</div>
		<div class="footer">
			<%@ include file="/common/footer.jsp"%>
		</div>
	</div>
</body>
</html>